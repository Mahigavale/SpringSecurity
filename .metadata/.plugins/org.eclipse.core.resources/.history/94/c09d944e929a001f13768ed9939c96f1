package com.school.Service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.school.Entity.School;
import com.school.Repository.Schoolrepo;

@Service
public class Schoolservice {
	
	@Autowired
	private Schoolrepo repo;

	public String addschool(School school)
	{
		repo.save(school);
		
		return "the school with the name :"+ school.getSchoolname()+ "is saved sucessfully.";
		
	}
	
	public List<School> getallschoolsservice()
	{
		return repo.findAll();
	}
}
