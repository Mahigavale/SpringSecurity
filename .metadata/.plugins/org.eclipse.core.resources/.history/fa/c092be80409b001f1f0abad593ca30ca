package com.security.Auth.Service;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertNotNull;

import org.junit.jupiter.api.Test;
import org.junit.jupiter.params.ParameterizedTest;
import org.junit.jupiter.params.provider.CsvSource;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;

import com.security.Auth.Repository.Dairycustomerrepo;

@SpringBootTest
public class Dairycustomerservicetest {
	
	@Autowired
	private Dairycustomerrepo repo;
	
	
	@Test
	public void testemail()
	{
		
		//System.out.println(repo.findbyemail("Abc@"));
		//assertEquals(4,2+2);
		assertNotNull(repo.findbyemail("Abc@gmail.com"));
	}
	
	
	@Test
	public void testnumbers()
	{
		assertEquals(6,3+3);
	}

	
	@ParameterizedTest
	@CsvSource
	{
		"10,10,20",
		"5,5,15"
		"12,12,35"
		
	}
	public void testnumbers(int a,int b, int expected)
	{
		assertEquals(expected, a+b);
		
	}
	
}


