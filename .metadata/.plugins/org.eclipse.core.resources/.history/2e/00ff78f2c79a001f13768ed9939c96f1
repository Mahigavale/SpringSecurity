package com.school.Service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;
import org.springframework.stereotype.Service;

import com.school.Entity.Principal;
import com.school.Repository.Principalrepo;

@Service
public class Principalservice {
	
	@Autowired
	private Principalrepo repo;
	
	BCryptPasswordEncoder encoder = new BCryptPasswordEncoder(10);
	
	public String addprincipal(Principal principal)
	principal.setPassword(encoder.encode(principal.getPassword()));
	
	{
		repo.save(principal);
		
		return "thank you ! Principal:"+ principal.getName()+" for registartion.";
	}

}
