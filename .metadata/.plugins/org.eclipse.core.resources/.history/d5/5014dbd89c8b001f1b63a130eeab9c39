package com.security.Case.Repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.security.Case.Entity.UserEntity;

@Repository
public interface Userrepo extends JpaRepository<UserEntity, Integer>{

	
	@Query(value="select useremail from UserEntity",nativeQuery=true)
	public List<String> getallemails();
	
	@Query(value="select * from  UserEntity where username= :nm",nativeQuery=true)
	public UserEntity getbyusername(@Param("nm") String nm);
}
